<h1>Edit a Car</h1>

<%= form_tag "/cars/#{@car.id}", method: :patch do %>
  <div>
    Style: <input type="text" name="style" value="<%= @car.style %>">
  </div>
    <div>
    Engine: <input type="text" name="engine" value="<%= @car.engine %>">
  </div>
  <div>
    Drive-type: <input type="text" name="drive_type" value="<%= @car.drive_type %>">
  </div>
  <div>
    Transmission-type: <input type="text" name="transmission_type" value="<%= @car.transmission_type %>">
  </div>

  <input class="btn btn-success" type="submit" value="Update Car">
<% end %>