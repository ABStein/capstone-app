<h1>Add a Car</h1>

<div class="row">
  <%= form_tag '/cars', method: :post, class: "col-sm-6 col-sm-offset-3" do %>
    <div class="form-group">
      Year: <input class="form-control" type="text" name="year">
    </div>
    <div class="form-group">
      Make: <input class="form-control" type="text" name="make">
    </div>
    <div class="form-group">
      Model: <input class="form-control" type="text" name="model">
    </div>
    <div class="form-group">
      Style: <input class="form-control" type="text" name="style">
    </div>
    <div>
        <input class="btn btn-primary pull-right car-buttons" type="submit" value="Save Car">
    </div>
  <% end %>
</div>